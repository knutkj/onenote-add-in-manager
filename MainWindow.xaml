<Window x:Class="OneNoteAddinManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneNoteAddinManager"
        mc:Ignorable="d"
        Title="OneNote Add-in Manager"
        Height="600"
        Width="1400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:EnableDisableConverter x:Key="EnableDisableConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#2B579A"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title and Status -->
                <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="OneNote Add-in Manager"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="AdminStatusText"
                               Text=""
                               FontSize="12"
                               Foreground="Yellow"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Utility Buttons Row -->
                <Grid Grid.Column="2" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"
                            x:Name="HeaderRefreshButton"
                            Content="🔄 Refresh"
                            Click="RefreshButton_Click"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            Background="#4A7BC8"
                            Foreground="White"
                            BorderBrush="#6A9BD1"
                            ToolTip="Refresh add-in list"/>
                    
                    <Button Grid.Column="1"
                            x:Name="HeaderCleanupButton"
                            Content="🧹 Cleanup"
                            Click="CleanupButton_Click"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            Background="#4A7BC8"
                            Foreground="White"
                            BorderBrush="#6A9BD1"
                            ToolTip="Remove orphaned registry entries"/>
                    
                    <Button Grid.Column="2"
                            x:Name="HeaderStartOneNoteButton"
                            Content="▶ Start OneNote"
                            Click="StartOneNoteButton_Click"
                            Padding="10,5"
                            Background="#5CB85C"
                            Foreground="White"
                            BorderBrush="#7CC77C"
                            ToolTip="Start Microsoft OneNote"/>
                </Grid>
                
                <!-- Status Information Row -->
                <Grid Grid.Column="2" Grid.Row="1" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Refresh Status -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,10,0" Width="90">
                        <TextBlock x:Name="HeaderRefreshStatusText" 
                                   Text=""
                                   FontSize="9"
                                   Foreground="#CCCCCC"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- Cleanup Status -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,10,0" Width="90">
                        <TextBlock x:Name="HeaderCleanupStatusText" 
                                   Text=""
                                   FontSize="9"
                                   Foreground="#CCCCCC"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- OneNote Status -->
                    <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" Width="115">
                        <TextBlock x:Name="HeaderOneNoteStatusText" 
                                   Text="🔴 Not Running"
                                   FontSize="9"
                                   Foreground="#CCCCCC"
                                   HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="HeaderOneNotePidText" 
                                       Text=""
                                       FontSize="8" 
                                       Foreground="#AAAAAA"/>
                            <TextBlock x:Name="HeaderOneNoteStartTimeText" 
                                       Text=""
                                       FontSize="8" 
                                       Foreground="#AAAAAA"
                                       Margin="3,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="400" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Add-ins List -->
            <GroupBox Grid.Column="0" 
                      Header="OneNote Add-ins" 
                      Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <!-- Simple List showing only names -->
                    <ListBox Grid.Row="1"
                             x:Name="AddinsListBox"
                             SelectionChanged="AddinsListBox_SelectionChanged"
                             DisplayMemberPath="FriendlyName"
                             Margin="0,0,0,10"/>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Vertical">
                        <Button x:Name="EnableDisableButton"
                                Content="Enable/Disable"
                                Click="ToggleAddin_Click"
                                Padding="5"
                                Margin="0,0,0,5"
                                IsEnabled="False"/>
                        <Button x:Name="UnregisterButton"
                                Content="Unregister"
                                Click="UnregisterButton_Click"
                                Padding="5"
                                Margin="0,0,0,5"
                                IsEnabled="False"/>
                        
                        <!-- Register New Add-in -->
                        <TextBlock Text="Register New Add-in" 
                                   FontWeight="Bold" 
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="DLL Path:" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="DllPathTextBox" Grid.Column="0" Margin="0,0,5,0"/>
                            <Button x:Name="BrowseDllButton" Grid.Column="1" Content="..." Click="BrowseDllButton_Click" Width="30"/>
                        </Grid>
                        <Button x:Name="RegisterButton" Content="Register Add-in" Click="RegisterButton_Click" Margin="0,5,0,0" Padding="5"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Details View -->
            <GroupBox Grid.Column="1" 
                      Header="Add-in Details &amp; Registry Information">
                <Grid>
                    <TabControl x:Name="DetailsTabControl" 
                               SelectionChanged="DetailsTabControl_SelectionChanged"
                               Visibility="Collapsed">
                        <TabItem Header="Add-in Information" x:Name="AddinDetailsTab">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="AddinDetailsPanel" Margin="10">
                            
                                    <!-- Basic Information -->
                                    <TextBlock Text="Basic Information" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,10"/>
                                    
                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="NameText" TextWrapping="Wrap"/>
                                        <Button Grid.Row="0" Grid.Column="2" 
                                                x:Name="NameInfoButton"
                                                Content="ℹ"
                                                Click="NameInfoButton_Click"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                Width="20" Height="20"
                                                FontSize="12"
                                                Foreground="#2E7CE6"
                                                Margin="5,0,0,0"
                                                ToolTip="Information about the Name field"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Friendly Name:" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="FriendlyNameText" TextWrapping="Wrap"/>
                                        <Button Grid.Row="1" Grid.Column="2" 
                                                x:Name="FriendlyNameInfoButton"
                                                Content="ℹ"
                                                Click="FriendlyNameInfoButton_Click"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                Width="20" Height="20"
                                                FontSize="12"
                                                Foreground="#2E7CE6"
                                                Margin="5,0,0,0"
                                                ToolTip="Information about the Friendly Name field"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Status:" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="AddinStatusText" TextWrapping="Wrap"/>
                                        <Button Grid.Row="2" Grid.Column="2" 
                                                x:Name="StatusInfoButton"
                                                Content="ℹ"
                                                Click="StatusInfoButton_Click"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                Width="20" Height="20"
                                                FontSize="12"
                                                Foreground="#2E7CE6"
                                                Margin="5,0,0,0"
                                                ToolTip="Information about the Status field"/>
                                        
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="GUID:" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="GuidText" TextWrapping="Wrap" FontFamily="Consolas"/>
                                        <Button Grid.Row="4" Grid.Column="2" 
                                                x:Name="GuidInfoButton"
                                                Content="ℹ"
                                                Click="GuidInfoButton_Click"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                Width="20" Height="20"
                                                FontSize="12"
                                                Foreground="#2E7CE6"
                                                Margin="5,0,0,0"
                                                ToolTip="Information about the GUID field"/>
                                        
                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="DLL Path:" FontWeight="Bold"/>
                                        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Vertical">
                                            <TextBlock x:Name="DllPathText" TextWrapping="Wrap" FontFamily="Consolas"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <Button x:Name="OpenDllFolderButton" 
                                                        Content="📁 Open Folder" 
                                                        Click="OpenDllFolderButton_Click"
                                                        Padding="8,4"
                                                        FontSize="11"
                                                        IsEnabled="False"
                                                        ToolTip="Open the folder containing the DLL file"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Button Grid.Row="5" Grid.Column="2" 
                                                x:Name="DllPathInfoButton"
                                                Content="ℹ"
                                                Click="DllPathInfoButton_Click"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                Width="20" Height="20"
                                                FontSize="12"
                                                Foreground="#2E7CE6"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Top"
                                                ToolTip="Information about the DLL Path field"/>
                                        
                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Registry Path:" FontWeight="Bold"/>
                                        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Vertical">
                                            <TextBlock x:Name="RegistryPathText" TextWrapping="Wrap" FontFamily="Consolas"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <Button x:Name="OpenRegistryButton" 
                                                        Content="🖊️ Open Registry Editor" 
                                                        Click="OpenRegistryButton_Click"
                                                        Padding="8,4"
                                                        FontSize="11"
                                                        IsEnabled="False"
                                                        ToolTip="Open Registry Editor"/>
                                                <Button x:Name="CopyRegistryPathButton" 
                                                        Content="📋 Copy Registry Path" 
                                                        Click="CopyRegistryPathButton_Click"
                                                        Padding="8,4"
                                                        FontSize="11"
                                                        Margin="5,0,0,0"
                                                        IsEnabled="False"
                                                        ToolTip="Copy registry path to clipboard"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Button Grid.Row="6" Grid.Column="2" 
                                                x:Name="RegistryPathInfoButton"
                                                Content="ℹ"
                                                Click="RegistryPathInfoButton_Click"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                Width="20" Height="20"
                                                FontSize="12"
                                                Foreground="#2E7CE6"
                                                Margin="5,0,0,0"
                                                VerticalAlignment="Top"
                                                ToolTip="Information about the Registry Path"/>
                                    </Grid>

                                    <!-- LoadBehavior Explanation -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="LoadBehavior Configuration" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"/>
                                        <Button x:Name="LoadBehaviorInfoButton"
                                                Content="ℹ"
                                                Click="LoadBehaviorInfoButton_Click"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                Width="20" Height="20"
                                                FontSize="12"
                                                Foreground="#2E7CE6"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="Information about LoadBehavior values"/>
                                    </StackPanel>
                                    
                                    <Border Background="#F0F0F0" 
                                            Padding="10" 
                                            Margin="0,0,0,20" 
                                            CornerRadius="5">
                                        <StackPanel>
                                            <TextBlock x:Name="LoadBehaviorText" 
                                                       FontWeight="Bold" 
                                                       Margin="0,0,0,5"/>
                                            <TextBlock x:Name="LoadBehaviorExplanationText" 
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- DLL Information -->
                                    <TextBlock Text="DLL Information" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,10"/>
                                    
                                    <Border Background="#F8F8F8" 
                                            Padding="15" 
                                            Margin="0,0,0,20" 
                                            CornerRadius="5"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="File Exists:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DllExistsText"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="File Locked:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DllLockedText"/>
                                            
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="File Size:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DllSizeText"/>
                                            
                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Modified:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DllModifiedText"/>
                                        </Grid>
                                    </Border>

                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <TabItem Header="COM Registration" x:Name="COMDetailsTab">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="COMDetailsPanel" Margin="10">
                            
                                    <!-- Registry Keys -->
                                    <TextBlock Text="Registry Keys" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="The following registry keys are used to register this add-in with Windows and OneNote. Understanding these keys helps with troubleshooting and manual registration." 
                                               TextWrapping="Wrap" 
                                               Margin="0,0,0,15"
                                               FontStyle="Italic"/>
                                    
                                    <DataGrid x:Name="RegistryKeysDataGrid"
                                              AutoGenerateColumns="False"
                                              HeadersVisibility="Column"
                                              GridLinesVisibility="Horizontal"
                                              AlternatingRowBackground="#F9F9F9"
                                              RowBackground="White"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              CanUserReorderColumns="False"
                                              CanUserResizeRows="False"
                                              CanUserSortColumns="True"
                                              IsReadOnly="True"
                                              SelectionMode="Single"
                                              BorderBrush="#E0E0E0"
                                              BorderThickness="1">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Purpose" 
                                                                Binding="{Binding Purpose}" 
                                                                Width="150"
                                                                FontWeight="Bold"/>
                                            <DataGridTextColumn Header="Registry Path" 
                                                                Binding="{Binding Path}" 
                                                                Width="300"
                                                                FontFamily="Consolas">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                        <Setter Property="Padding" Value="5"/>
                                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Description" 
                                                                Binding="{Binding Description}" 
                                                                Width="*">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                                        <Setter Property="Padding" Value="5"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Registry Values" 
                                                                Binding="{Binding ValuesText}" 
                                                                Width="200"
                                                                FontFamily="Consolas">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                                        <Setter Property="Padding" Value="5"/>
                                                        <Setter Property="Background" Value="#F8F8F8"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                    
                    <!-- Welcome message when no add-in is selected -->
                    <TextBlock x:Name="WelcomeText" 
                               Text="Select an add-in from the list to view detailed information about its registry configuration and COM registration."
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="Gray"
                               Margin="20"/>
                </Grid>
            </GroupBox>

            <!-- Splitter -->
            <GridSplitter Grid.Column="2" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          Background="LightGray" 
                          ShowsPreview="True"/>

            <!-- Right Rail - Context Help -->
            <GroupBox Grid.Column="3" 
                      Header="Context Help">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Quick Reference Links -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="0,0,0,10">
                        <Button x:Name="OverviewLinkButton"
                                Content="Overview"
                                Click="OverviewLinkButton_Click"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Padding="8,4"
                                Margin="0,0,5,0"/>
                        <Button x:Name="FieldsLinkButton"
                                Content="Fields"
                                Click="FieldsLinkButton_Click"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Padding="8,4"
                                Margin="0,0,5,0"/>
                        <Button x:Name="TroubleshootingLinkButton"
                                Content="Troubleshooting"
                                Click="TroubleshootingLinkButton_Click"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Padding="8,4"/>
                    </StackPanel>
                    
                    <!-- Dynamic Markdown Viewer -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="White"
                                  BorderBrush="LightGray" 
                                  BorderThickness="1">
                        <StackPanel x:Name="MarkdownContent" 
                                    Margin="15"
                                    Background="White">
                            <TextBlock Text="Loading context help..." 
                                       FontFamily="Segoe UI" 
                                       FontSize="12"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText"
                        Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
